@model Category
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
	<input type="hidden" asp-for="Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="ModelOnly"></div> *@
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0" ></label>
            <input asp-for="DisplayOrder" type="text" class="form-control" disabled />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>

            </div>
            <div class="col-6 col-md-3">

                <a asp-conteroller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">Back To List</a>
            </div>

        </div>
    </div>
</form>
