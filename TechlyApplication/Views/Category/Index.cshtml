@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category</h1>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            Category name
        </th>
        <th>
            Display order
        </th>
    </tr>
    <tr>
		@foreach (var item in Model)
		{
		<tr>
			<td>
					@item.Name
			</td>
			<td>
					@item.DisplayOrder
			</td>
		</tr>
		}
    </tr>
</table>